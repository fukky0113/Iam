
<div class="d-flex justify-content-center  mt-5">
    <div class="card text-center shadow" style="width: 26rem">
        <h1>Iam</h1>
        <h2>Sign in</h2>

        <%= form_with(url: login_path, scope: :session) do |f| %>
            <div class="col-sm mx-3 my-3">
                <%= f.text_field :user_id, class: "form-control", placeholder: "User ID" %>
            </div>
            <div class="col-sm mx-3 my-3">
                <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
            <div class="text-start mx-3">
                <%= f.label :remember_me do %>
                    <%= f.check_box :remember_me %>
                    <span class="text-secondary">Remember me on this computer</span>
                <% end %>
            </div>

            <div class="mx-3 my-3">
                <%= f.submit "Log in", class: "btn btn-primary w-100" %>
            </div>
        <% end %>
    </div>
</div>