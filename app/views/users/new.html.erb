<h1>Sign up</h1>

<%= form_with(model: @user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :user_id %>
    <%= f.text_field :user_id %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Create my account" %>
<% end %>