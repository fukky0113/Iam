<% provide(:title, 'Post Index') %>

<h1 class="text-center my-3">Welcome to My Blog</h1>

<div class="mx-5">

    <h2>プロフィール</h2>
    <p class="my-3"><%= @posted_user.profile %></p>
    
    <h2>スキルマップ</h2>
    <% if current_user.admin?  %>
        <%= link_to "new", new_user_user_skill_path(@posted_user) %>
    <% end %>
    <div>
        <% @user_skill.each do |user| %>
            <% @skill.where(id: user.skill_id).each do |skill| %>
                <%= skill.skill_name %>
            <% end %>
            <%= user.detail %><br>
        <% end %>
    </div>

    <%= render 'posts/post' %>
</div>